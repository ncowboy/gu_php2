<div class="cart-content hidden">
  {% set sum = 0 %}
  {% if cart is not empty %}
    {% for product in cart %}
      <div class="cart-item">
        <div class="cart-item-img">
          <img src="/uploads/{{ product.img }}" alt="{{ product.name }}">
        </div>
        <div class="cart-item-name">{{ product.name }}</div>
        <div class="cart-item-qty">{{ product.quantity }}</div>
        <div class="cart-item-sum">{{ product.quantity * product.price }}</div>
        <div class="cart-item-decrease"><a href="#"
                                           data-cart="{{ product.cart_id }}"
                                           data-product="{{ product.product_id }}">
            <i class="fas fa-times-circle"></i></a></div>
      </div>
      {% set sum = sum +  product.quantity *  product.price %}
    {% endfor %}
    <p class="text-center"><span class="cart-count">{{ count }}</span> товаров на сумму <span
          class="cart-sum">{{ sum }}</span> р. </p>
    <button class="cart-clear btn btn-danger mb-3" data-id="{{ cart.0.cart_id }}">Очистить корзину</button>
    <a href="/site/checkout" class="btn btn-success mb-3">Оформить заказ</a>
  {% endif %}
</div>
